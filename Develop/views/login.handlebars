<!-- Login Page -->


<div class="taskTitan_banner">
    <h2>Log In</h2>
</div>

<section class="section container">
    <div class="row">
        <form class="col s12 m8 offset-m2 l6 offset-l3" action="/login" method="post">
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="robin@teentitans.go" id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="**********" id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 center-align">
                    <button type="submit" class="waves-effect waves-light btn-large deep-purple">Log In</button>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col s12 center-align">
                <p>Not a member?</p>
                <a href="/signup" class="waves-effect waves-light btn deep-purple" id="new_user">Sign Up Now!</a>
            </div>
        </div>
    </div>
</section>